	 <!-- 전체 처리  {1}:경로명, {2}:파일명 -->
	 <definition name="*/*" extends="main">
	 	<put-attribute name="content" value="/WEB-INF/{1}/{2}.jsp"/>
	 </definition>
	 
	 <definition name="*/*/*" extends="main">
	 	<put-attribute name="content" value="/WEB-INF/{1}/{2}/{3}.jsp"/>
	 </definition>
	 
